<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.screenUser.DetailMagazineActivity">
    <Toolbar
        android:id="@+id/toolbar_magazine"
        android:title="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detai_title"
                android:text="@string/txtMagazine"
                android:padding="30dp"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView
                android:id="@+id/imageDetailMagazine"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </ImageView>
            <TextView
                android:id="@+id/descriptionMagazine"
                android:text="@string/description_magazine"
                android:textSize="16sp"
                android:padding="20dp"
                android:justificationMode="inter_word"
                android:textColor="#604A4A"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute">
            </TextView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>