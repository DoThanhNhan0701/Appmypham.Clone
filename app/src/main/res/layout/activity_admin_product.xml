<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_screen_admin"
    tools:context=".activity.screenAdmin.AdminProductActivity">

    <Toolbar
        android:id="@+id/toolbarAdmin"
        android:title="@string/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/toolbarAdmin"
        android:id="@+id/recyclerViewProductAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    <Button
        android:id="@+id/themsanpham"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botron_button"
        android:text="Thêm sản phẩm"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
</RelativeLayout>