<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_screen_admin"
    tools:context=".activityManagement.ManagementProductActivity">

    <Toolbar
        android:id="@+id/toolbarAdmin"
        android:title="@string/product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Toolbar>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/themsanpham"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            android:layout_height="110dp"
            android:layout_width="110dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/manager_notification"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp"
                    android:text="@string/add_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/management_websiteCate"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            android:layout_height="110dp"
            android:layout_width="110dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/categories"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:textColor="#6f6f6f"
                    android:textSize="18sp"
                    android:layout_marginTop="12sp"
                    android:text="@string/delete_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                app:cardCornerRadius="12dp"
                android:layout_margin="8dp"
                android:layout_height="110dp"
                android:layout_width="110dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/manager_product"
                        android:layout_width="50dp"
                        android:layout_height="50dp">
                    </ImageView>
                    <TextView
                        android:textColor="#6f6f6f"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        android:text="@string/update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>